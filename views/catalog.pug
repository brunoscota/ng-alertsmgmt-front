  .main-panel
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-transparent.navbar-absolute.fixed-top
      .container-fluid
        .navbar-wrapper
          a.navbar-brand(href='#pablo') Dashboard
        button.navbar-toggler(type='button' data-toggle='collapse' aria-controls='navigation-index' aria-expanded='false' aria-label='Toggle navigation')
          span.sr-only Toggle navigation
          span.navbar-toggler-icon.icon-bar
          span.navbar-toggler-icon.icon-bar
          span.navbar-toggler-icon.icon-bar
        .collapse.navbar-collapse.justify-content-end
          form.navbar-form
            //- .input-group.no-border
            //-   input.form-control(type='text' value='' placeholder='Search...')
            //-   button.btn.btn-white.btn-round.btn-just-icon(type='submit')
            //-     i.material-icons search
            //-     .ripple-container
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='/')
                i.material-icons dashboard
                p.d-lg-none.d-md-block
                  | Stats
            li.nav-item.dropdown
              a#navbarDropdownMenuLink.nav-link(href='http://example.com' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                i.material-icons notifications
                span.notification 5
                p.d-lg-none.d-md-block
                  | Some Actions
              .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownMenuLink')
                a.dropdown-item(href='#') Mike John responded to your email
                a.dropdown-item(href='#') You have 5 new tasks
                a.dropdown-item(href='#') You&apos;re now friend with Andrew
                a.dropdown-item(href='#') Another Notification
                a.dropdown-item(href='#') Another One
            li.nav-item.dropdown
              a#navbarDropdownUser.nav-link(href='#' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                i.material-icons person
                //span.notification 
                p.d-lg-none.d-md-block
                  | User Actions
              .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownUser')
                a.dropdown-item(href='/users') My Profile
                a.dropdown-item(href='/logout') Logout
    // End Navbar
    .content
      .container-fluid
        .row
          .col-md-10
            .card
              .card-header.card-header-primary
                h4.card-title Rules
                p.card-category Issues classification
              .card-body
                table#geoTable.display(width='100%')            
          .col-md-2
            .card
              .card-header.card-header-primary
                h4.card-title Actions
                p.card-category 
              .card-body
                // Large modal
                button.btn.btn-primary.btn-block(type='button' data-toggle='modal' data-target='.bd-geoadd-modal-lg') New Rule
                button.btn.btn-primary.btn-block(type='button' data-toggle='modal' data-target='.bd-georemove-modal-lg') Remove Rule
                .modal.fade.bd-geoadd-modal-lg(tabindex='-1' role='dialog' aria-labelledby='myLargeModalLabel' aria-hidden='true')
                  .modal-dialog.modal-lg
                    .modal-content
                      .modal-header
                        h4#geoModal.modal-title Add a new entry to GEO Catalog
                      .container-fluid                    
                        form
                          .row
                            .col-md-6
                              .form-group
                                label.bmd-label-floating Host *
                                input#input-geo-host.form-control(type='text')
                            .col-md-6
                              .form-group
                                label.bmd-label-floating Service *
                                input#input-geo-service.form-control(type='text')
                          .row
                            .col-md-6
                              .form-group
                                label(for='component') Component *
                                select#select-geo-component.form-control
                                  option(selected='') Choose...
                                  option CÉLULA - INTEGRAÇÃO E FINANCEIRO
                                  option CÉLULA - ARQUITETURA
                                  option CÉLULA - REPLENISHMENT
                                  option CÉLULA - RI
                                  option CÉLULA - MASTER
                                  option CÉLULA - INOVAÇÃO
                                  option CÉLULA - SOURCING
                                  option CÉLULA - FISCAL
                                  option CÉLULA - DI
                                  option GEO
                            .col-md-6
                              .form-group
                                label(for='priority') Priority *
                                select#select-geo-priority.form-control
                                  option(selected='') Choose...
                                  option Blocante
                                  option Alta
                                  option Média
                                  option Baixa
                                  option Trivial
                          .row
                            .col-md-6
                              .form-group
                                label(for='environment') Environment *
                                select#select-geo-environment.form-control
                                  option(selected='') Choose...
                                  option Produção
                                  option Homologação
                                  option Desenvolvimento
                                  option Alpha
                                  option Pre-Produção
                                  option Testes
                            .col-md-6
                              .form-group
                                label(for='datacenter') DataCenter *
                                select#select-geo-datacenter.form-control
                                  option(selected='') Choose...
                                  option BR DC Equinix SP2
                                  option BR DC Sercompe
                                  option BR DC Equinix RJ2
                                  option CLOUD DC Amazon
                                  option CLOUD DC Azure
                                  option US DC Equinix 
                                  option US DC CenturyLink Savvis                           
                          .row
                            .col-md-12
                              .form-group
                                label.bmd-label-floating Documentation URL *
                                input#input-geo-url.form-control(type='url')
                          .row
                          button#btn-geo-send.btn.btn-success.pull-right(type='submit') Save
                          button#btn-geo-reset.btn.btn-warning.pull-right(type='reset') Clear
                          .clearfix                          
                .modal.fade.bd-georemove-modal-lg(tabindex='-1' role='dialog' aria-labelledby='myLargeModalLabel' aria-hidden='true')
                  .modal-dialog.modal-lg
                    .modal-content
                      .modal-header
                        h4#geoModal.modal-title Remove an entry from GEO Catalog
                      .container-fluid
                        form
                          .row
                            .col-md-6
                              .form-group
                                label.bmd-label-floating Host *
                                input#input-geo-host-remove.form-control(type='text')
                            .col-md-6
                              .form-group
                                label.bmd-label-floating Service *
                                input#input-geo-service-remove.form-control(type='text')
                          .row
                          button#btn-geo-remove.btn.btn-danger.pull-right(type='submit') Remove
                          button#btn-geo-remove-reset.btn.btn-warning.pull-right(type='reset') Clear
                          .clearfix                          
            
    footer.footer
